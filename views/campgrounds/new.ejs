<% layout('./layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-md-6 offset-md-3 pt-3">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
    <!-- Title -->
      <div class="mb-3 form-floating">
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          placeholder="Title"
          required
        />
        <label class="form-label" for="title">Title</label>
        <div class="valid-feedback">Looks good!</div>
      </div>
    <!-- Location -->
      <div class="mb-3 form-floating">
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          placeholder="Location"
          required
        />
        <label class="form-label" for="location">Location</label>
        <div class="valid-feedback">Looks good!</div>
      </div>
    <!-- Images -->
      <div class="mb-3 input-group flex-row">
        <label class="input-group-text col-4" for="images">Images:</label>
        <input
          class="form-control visually-hidden"
          type="file"
          id="images"
          name="campground[images]"
          onchange="showInputFiles(this)"
          required
          multiple
        />
        <button 
          class="btn btn-primary col-8" 
          type="button"
          onclick="document.getElementById('images').click()">Choose Files 
        </button>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mt-3"> 
        <div class="row" id="imagePreviews"></div> 
      </div>
    <!-- Price -->
      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text" id="price-label">Price:</span>
          <input
            class="form-control"
            type="number"
            step=".01"
            id="price"
            name="campground[price]"
            placeholder="0"
            aria-describedby="price-label"
            required
          />
          <span class="input-group-text" id="price-label">$</span>
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>
    <!-- Description -->
      <div class="mb-3 form-floating">
        <textarea
          class="form-control h-100"
          type="text"
          id="description"
          name="campground[description]"
          placeholder="Description"
          maxlength="120"
          required
        ></textarea>
        <label class="form-label form-floating" for="description"
          >Description</label>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary" type="submit">Add Campground</button>
      </div>
    </form>
  </div>
</div>
