<% layout('./layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3 pt-3">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div class="mb-3 form-floating">
        <input
          type="text"
          id="title"
          class="form-control"
          name="campground[title]"
          placeholder="Title"
          value="<%= campground.title %>"
          required
        />
        <label class="form-label" for="title">Title</label>
      </div>
      <div class="mb-3 form-floating">
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          placeholder="Location"
          value="<%= campground.location %>"
          required
        />
        <label class="form-label" for="location">Location</label>
      </div>
      <div class="mb-3 form-floating">
        <input
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          placeholder="Image URL"
          value="<%= campground.image %>"
          required
        />
        <label class="form-label" for="image">Image URL</label>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price:</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            class="form-control"
            type="number"
            id="price"
            name="campground[price]"
            value="<%= campground.price %>"
            aria-describedby="price-label"
            required
          />
        </div>
      </div>
      <div class="mb-3 form-floating">
        <textarea
          class="form-control h-100"
          type="text"
          id="description"
          name="campground[description]"
          placeholder="Description"
          value="<%= campground.description %>"
          maxlength="120"
          required
        ></textarea>
        <label class="form-label form-floating" for="description"
          >Description</label
        >
      </div>
      <div class="mb-3">
        <button class="btn btn-primary" type="submit">Update Campground</button>
      </div>
      <a href="/campgrounds/<%= campground._id %>">Back to campground</a>
    </form>
  </div>
</div>
